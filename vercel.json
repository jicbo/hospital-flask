{
	"version": 2,
	"builds": [
		{
			"src": "wsgi.py",
			"use": "@vercel/python",
			"config": { "requirements": "requirements.txt" }
		}
	],
	"routes": [
		{
			"src": "/(.*)",
			"dest": "wsgi.py"
		}
	],
	"env": {
		"PYTHON_VERSION": "3.12",
		"FLASK_APP": "wsgi.py",
		"FLASK_ENV": "production",
		"SQLALCHEMY_TRACK_MODIFICATIONS": "False",
		"SQLALCHEMY_ECHO": "True",
		"SQLALCHEMY_ENGINE_OPTIONS": "{\"pool_size\": 1, \"max_overflow\": 0}"
	},
	"git": {
		"deploymentEnabled": {
			"main": true
		}
	}
}
